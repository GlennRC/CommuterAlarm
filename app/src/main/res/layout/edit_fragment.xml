<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:background="#fff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/labelLayout"
        android:padding="4dp"
        android:elevation="2dp"
        android:background="#fff"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label"
            android:text="Alarm name"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:imeOptions="actionDone"
            android:singleLine="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setTimeLayout"
        android:layout_below="@+id/labelLayout"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:baselineAligned="false"
        android:background="#fff"
        android:paddingBottom="4dp"
        android:clipToPadding="false"
        android:paddingTop="4dp"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/arrival_layout"
            android:background="#fff"
            android:elevation="2dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:padding="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrivalLabel"
                android:text="Edit arrival time"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrivalTime"
                android:text="9:00 am"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:layout_below="@id/arrivalLabel"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prep_layout"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_marginStart="4dp"
            android:padding="4dp"

            android:background="#fff"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prepLabel"
                android:text="Edit prep time"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prepTime"
                android:text="45"
                android:textColor="@color/colorAccent"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:layout_below="@id/prepLabel"
                android:inputType="number"
                android:imeOptions="actionDone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/prepTime"
                android:layout_alignBottom="@+id/prepTime"
                android:text=" min"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address_layout"
        android:layout_below="@+id/setTimeLayout"
        android:padding="4dp"
        android:elevation="2dp"
        android:background="#fff"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/origin"
            android:text="Origin"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/origin"
            android:id="@+id/destination"
            android:textColor="@color/colorAccent"
            android:text="Destination"
            android:textSize="20sp"
            android:padding="4dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_layout"
        android:id="@+id/calc_layout"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:elevation="2dp"
        android:background="#fff"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calc_wake_label"
            android:textColor="@color/colorPrimary"
            android:text="Est. wake time: "
            android:textSize="15sp"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calc_wake"
            android:layout_below="@+id/calc_wake_label"
            android:textColor="@color/colorPrimary"
            android:text="8:00 am"
            android:textSize="30sp"
            android:padding="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duration_label"
            android:textColor="@color/colorPrimary"
            android:text="Est. duration: "
            android:textSize="15sp"
            android:padding="4dp"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duration"
            android:layout_below="@+id/calc_wake_label"
            android:textColor="@color/colorPrimary"
            android:text="45 min"
            android:textSize="30sp"
            android:padding="4dp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/editActionLayout"
        android:layout_below="@+id/calc_layout"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:visibility="visible"
        android:background="#fff"
        android:paddingTop="6dp"
        >
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Done"
            android:id="@+id/done_action"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="6dp"
            android:padding="4dp"
            />

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_action"
            android:background="@android:color/white"
            android:textColor="@color/colorAccent"
            android:text="Cancel"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="12dp"
            android:padding="4dp"
            />
    </LinearLayout>

</RelativeLayout>

